<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/google_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/sArriba"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login_white"
            android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
            android:fontFamily="@font/lato_bold"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:shadowRadius="5"
            android:text="@string/ingresar_con_google"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/normal_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/sAbajo"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login_white"
            android:drawableStart="@drawable/ic_mail_violet_24dp"
            android:fontFamily="@font/lato_bold"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:shadowRadius="5"
            android:text="@string/ingresar_con_email"
            android:textColor="@color/colorPrimary" />

        <Space
            android:id="@+id/sAbajo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Space
            android:id="@+id/sArriba"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/normal_login"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="327dp"
            android:layout_height="312dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/bar_tap" />

    </RelativeLayout>
</RelativeLayout>