<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.FinSorteoActivity">

    <TextView
        android:id="@+id/sorteo_terminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/texto_ganador"
        android:layout_centerHorizontal="true"
        android:text="Â¡Sorteo terminado!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:translationY="-20dp" />

    <TextView
        android:id="@+id/texto_ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Participante ganador gano el sorteo"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:translationY="-20dp" />

    <Button
        android:id="@+id/continuar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_ganador"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_violeta"
        android:text="@string/continuar"
        android:textColor="@android:color/background_light" />
</RelativeLayout>