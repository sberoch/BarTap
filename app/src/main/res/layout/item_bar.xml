<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="5dp">

    <TextView
        android:id="@+id/nombre_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sArriba"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imagen_bar"
        android:fontFamily="@font/lato_bold"
        android:maxWidth="150dp"
        android:text="Bar de Prueba "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ubicacion_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_bar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imagen_bar"
        android:maxWidth="150dp"
        android:text="Virrey Arredondo 2800" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/sArriba"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="2dp" />


    <Space
        android:id="@+id/sAbajo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/imagen_bar"
        android:layout_centerHorizontal="true" />

    <Space
        android:id="@+id/sArriba"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/estrellas_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sArriba"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/estrellas_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/ic_star_violet_24dp" />

        <TextView
            android:id="@+id/estrellas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/estrellas_icon"
            android:fontFamily="@font/lato_bold"
            android:text="9.8"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/oferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ubicacion_bar"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/imagen_bar"
        android:text="@string/oferta_signos"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"/>
</RelativeLayout>