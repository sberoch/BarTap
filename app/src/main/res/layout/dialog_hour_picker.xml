<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/hasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_seleccione_hora"
        android:layout_toEndOf="@+id/s1">

        <TextView
            android:id="@+id/hasta_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_centerHorizontal="true"
            android:text="@string/hasta"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <com.super_rabbit.wheel_picker.WheelPicker
            android:id="@+id/hasta_np"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/hasta_titulo"
            android:layout_centerHorizontal="true"
            app:textSize="14sp">

        </com.super_rabbit.wheel_picker.WheelPicker>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_seleccione_hora"
        android:layout_toStartOf="@+id/s1">

        <TextView
            android:id="@+id/desde_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_centerHorizontal="true"
            android:text="@string/desde"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <com.super_rabbit.wheel_picker.WheelPicker
            android:id="@+id/desde_np"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/desde_titulo"
            android:layout_centerHorizontal="true"
            app:textSize="14sp">

        </com.super_rabbit.wheel_picker.WheelPicker>
    </RelativeLayout>

    <Space
        android:id="@+id/s1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_seleccione_hora"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/titulo_seleccione_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/entre_que_horarios_esta_abierto_el_bar"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cerrado_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasta"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/cerrado_este_dia" />

</RelativeLayout>