<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <TextView
        android:id="@+id/nombre_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imagen_bar"
        android:fontFamily="@font/lato_bold"
        android:maxWidth="150dp"
        android:text="Bar de Prueba "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ubicacion_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_bar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imagen_bar"
        android:maxWidth="150dp"
        android:text="Virrey Arredondo 2800" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp" />


</RelativeLayout>