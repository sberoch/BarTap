                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/happyhour_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/happy_hour_opcional"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/happyhours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/hh_lunes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/lunes_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Lunes" />

                        <TextView
                            android:id="@+id/hhLunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_martes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/martes_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Martes" />

                        <TextView
                            android:id="@+id/hhMartes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_miercoles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/miercoles_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Miercoles" />

                        <TextView
                            android:id="@+id/hhMiercoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_jueves"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/jueves_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Jueves" />

                        <TextView
                            android:id="@+id/hhJueves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_viernes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/viernes_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Viernes" />

                        <TextView
                            android:id="@+id/hhViernes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_sabado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/sabado_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Sabado" />

                        <TextView
                            android:id="@+id/hhSabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_domingo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/domingo_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="30dp"
                            android:layout_weight="1"
                            android:text="Domingo" />

                        <TextView
                            android:id="@+id/hhDomingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/metodos_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/metodos_de_pago"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/efectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/efectivo" />

                <RadioButton
                    android:id="@+id/tarjeta_credito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tarjeta_de_credito" />

                <RadioButton
                    android:id="@+id/tarjeta_debito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tarjeta_de_debito" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/listo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="@string/listo" />

    </RelativeLayout>

</RelativeLayout>
