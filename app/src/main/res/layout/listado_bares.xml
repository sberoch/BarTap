<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp">

        <RelativeLayout
            android:id="@+id/barra_sup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageButton
                android:id="@+id/drawer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_menu_black_24dp" />

            <TextView
                android:id="@+id/puntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="14dp"
                android:fontFamily="@font/lato_bold"
                android:text="Puntos: 234"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/notificaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_notifications_none_violet_24dp" />

            <View
                android:id="@+id/hline"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/drawer_button"
                android:layout_marginBottom="2dp"
                android:background="#ccc" />

            <EditText
                android:id="@+id/buscar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/hline"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:background="@drawable/edittext_black"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:inputType="textShortMessage"
                android:padding="8dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:text="@string/buscar"
                android:textAlignment="center"
                android:textColor="@color/negroSemiTransparente"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_violeta" />

            <Button
                android:id="@+id/filtrar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/hline"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/buscar"
                android:background="@drawable/edittext_violet"
                android:drawableStart="@drawable/ic_filter_list_24dp"
                android:fontFamily="@font/lato_bold"
                android:padding="8dp"
                android:text="@string/filtrar"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/barra_progreso_circular"
            android:indeterminateDuration="2000" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barra_sup" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_drawer"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>