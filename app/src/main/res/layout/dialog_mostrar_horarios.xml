                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text=" - " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hh_viernes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

