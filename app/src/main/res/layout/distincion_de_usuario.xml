<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".DistincionDeUsuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/tengoBar"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_above="@+id/s1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login"
            android:shadowRadius="5"
            android:text="@string/tengo_un_bar"
            android:textColor="@color/blancoSemiTransparente" />

        <Button
            android:id="@+id/buscoBar"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_above="@+id/s2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login"
            android:shadowRadius="5"
            android:text="@string/busco_un_bar"
            android:textColor="@color/blancoSemiTransparente" />

        <Space
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Space
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/tengoBar"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>