<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".DistincionDeUsuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/tengoBar"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_above="@+id/sAbajo"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login"
            android:fontFamily="@font/lato_bold"
            android:shadowRadius="5"
            android:text="@string/tengo_un_bar"
            android:textColor="@color/blancoSemiTransparente" />

        <Button
            android:id="@+id/comenzar"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_above="@+id/sArriba"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_login_white"
            android:fontFamily="@font/lato_bold"
            android:shadowRadius="5"
            android:text="@string/comenzar"
            android:textColor="@color/colorPrimary" />

        <Space
            android:id="@+id/sAbajo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Space
            android:id="@+id/sArriba"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/tengoBar"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="327dp"
            android:layout_height="312dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/bar_time" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>