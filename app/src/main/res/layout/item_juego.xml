<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="5dp">

    <TextView
        android:id="@+id/nombre_juego"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sArriba"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imagen_juego"
        android:fontFamily="@font/lato_bold"
        android:maxWidth="150dp"
        android:text="Desafio"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descripcion_juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_juego"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/imagen_juego"
        android:ellipsize="end"
        android:maxLines="1"
        android:text='"El mejor juego que vas a ver en aÃ±os, te lo juro @string/fui_error_too_many_attempts"' />

    <TextView
        android:id="@+id/bar_del_juego"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descripcion_juego"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imagen_juego"
        android:maxWidth="150dp"
        android:text="En MegaBar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_juego"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sArriba"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="2dp" />


    <Space
        android:id="@+id/sArriba"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true" />

    <Space
        android:id="@+id/sAbajo"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/imagen_juego"
        android:layout_centerHorizontal="true" />

</RelativeLayout>