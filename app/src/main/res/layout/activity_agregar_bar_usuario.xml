<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarBarUsuario">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="5dp">

            <TextView
                android:id="@+id/titulo_agregar_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                android:fontFamily="@font/lato_bold"
                android:padding="4dp"
                android:text="@string/agregar_un_bar"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_arrow_back_white_24dp"
                android:padding="4dp" />
        </RelativeLayout>

        <View
            android:id="@+id/hline"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/superior"
            android:background="@color/colorPrimary" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/hline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittext_violet"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:inputType="textPersonName"
            android:text="@string/nombre"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor_violeta"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@+id/nombre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_violet"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@string/seleccionar_ubicacion"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/foto"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@+id/direccion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_violet"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@string/seleccionar_foto"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagen_bar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/hline2"
            android:layout_below="@+id/foto"
            android:layout_centerHorizontal="true"
            android:src="@drawable/testbar"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="2dp" />

        <View
            android:id="@+id/hline2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_above="@+id/listo"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/listo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/lato_bold"
            android:padding="20dp"
            android:text="@string/listo"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>