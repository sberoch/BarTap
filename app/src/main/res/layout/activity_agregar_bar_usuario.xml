<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.AgregarBarUsuarioActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato_bold"
                android:padding="4dp"
                android:text="@string/agregar_un_bar"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:padding="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/superior"
            android:layout_marginTop="15dp"
            android:padding="30dp">

            <EditText
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_violet"
                android:elevation="2dp"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:hint="@string/nombre"
                android:inputType="textPersonName"
                android:minWidth="250dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/blancoSemiTransparente"
                android:textColorHint="@color/colorAccent"
                android:textColorLink="@color/blancoSemiTransparente"
                android:textCursorDrawable="@drawable/cursor_violeta"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ubicacion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_violeta"
                android:drawableStart="@drawable/ic_place_white_24dp"
                android:elevation="2dp"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:maxHeight="120dp"
                android:minHeight="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/seleccionar_ubicacion"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/foto"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@+id/ubicacion"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_violeta"
                android:drawableStart="@drawable/ic_image_white_24dp"
                android:elevation="2dp"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/seleccionar_foto"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagen_bar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/foto"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="3dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

        </RelativeLayout>

        <Button
            android:id="@+id/listo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_violeta"
            android:elevation="2dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/listo"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>